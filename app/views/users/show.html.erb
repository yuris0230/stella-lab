<div class="page-content">
  <!-- Page header -->
  <header class="app-page-header">
    <h1 class="app-page-title">My Page</h1>
    <p class="app-page-subtitle">
      Manage your profile and see your recent activity on Stella Lab.
    </p>
  </header>

  <!-- Profile summary card -->
  <section class="home-section">
    <div class="home-row">
      <div class="home-row-body">
        <div class="home-row-label">
          <%= @profile.display_name.presence || @user.email %>
        </div>
        <div class="home-row-meta">
          Joined <%= l(@user.created_at.to_date, format: :long) rescue @user.created_at.to_date %>
        </div>
      </div>
      <div class="home-row-stat">
        <%= link_to "Edit", edit_profile_path, class: "home-row-arrow" %>
      </div>
    </div>
  </section>

  <!-- Profile details -->
  <section class="home-section">
    <h2 class="home-section-title">Profile</h2>
    <div class="app-section-card">
      <p>
        <strong>Display name:</strong>
        <%= @profile.display_name.presence || "-" %>
      </p>

      <hr class="my-3" />

      <% if @profile.bio.present? %>
        <p><%= simple_format(@profile.bio) %></p>
      <% else %>
        <p class="text-muted mb-0">
          You have not written a bio yet.
        </p>
      <% end %>
    </div>
  </section>

  <!-- Recent activity -->
  <section class="home-section">
    <h2 class="home-section-title">Recent activity</h2>

    <!-- Recent topics -->
    <div class="app-section-card mb-3">
      <h3 class="app-section-title">Your topics</h3>

      <% if @recent_topics.any? %>
        <ul class="list-unstyled mb-0">
          <% @recent_topics.each do |topic| %>
            <li class="mb-2">
              <%= link_to topic.title, topic_path(topic) %>
              <span class="text-muted small">
                &nbsp;(<%= l(topic.created_at, format: :short) rescue topic.created_at %>)
              </span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted mb-0">You have not created any topics yet.</p>
      <% end %>
    </div>

    <!-- Recent posts -->
    <div class="app-section-card">
      <h3 class="app-section-title">Your posts</h3>

      <% if @recent_posts.any? %>
        <ul class="list-unstyled mb-0">
          <% @recent_posts.each do |post| %>
            <li class="mb-2">
              <%= link_to truncate(post.body, length: 80),
                          topic_path(post.topic, anchor: "post-#{post.id}") %>
              <span class="text-muted small">
                &nbsp;(<%= l(post.created_at, format: :short) rescue post.created_at %>)
              </span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted mb-0">You have not posted anything yet.</p>
      <% end %>
    </div>
  </section>
</div>