<%= form_with model: [:admin, @tier_list, @entry], local: true do |f| %>
  <% if @entry.errors.any? %>
    <div class="form-errors">
      <p><strong><%= pluralize(@entry.errors.count, "error") %> prevented saving:</strong></p>
      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="app-form-group">
    <%= f.label :character_id, "Character", class: "app-form-label" %>
    <%= f.collection_select :character_id,
                            Character.order(:name),
                            :id, :name,
                            { prompt: "Select character" },
                            { class: "app-form-control" } %>
  </div>

  <div class="app-form-group">
    <%= f.label :tier_rank, "Tier rank (e.g. T0, T1, T2 ...)", class: "app-form-label" %>
    <%= f.text_field :tier_rank,
                     class: "app-form-control",
                     placeholder: "T0 / T1 / T2 / T3 ..." %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", class: "app-button-primary" %>
    <%= link_to "Back",
                admin_tier_list_tier_list_entries_path(@tier_list),
                class: "app-button-secondary" %>
  </div>
<% end %>