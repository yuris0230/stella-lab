<%= form_with model: [:admin, @tier_list], local: true do |f| %>
  <% if @tier_list.errors.any? %>
    <div class="form-errors">
      <p><strong><%= pluralize(@tier_list.errors.count, "error") %> prohibited this tier list from being saved:</strong></p>
      <ul>
        <% @tier_list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="app-form-group">
    <%= f.label :title, "Title", class: "app-form-label" %>
    <%= f.text_field :title, class: "app-form-control" %>
  </div>

  <% if TierList.column_names.include?("slug") %>
    <div class="app-form-group">
      <%= f.label :slug, "Slug (URL)", class: "app-form-label" %>
      <span class="app-form-hint">
        Leave blank to auto-generate from name.
      </span>
      <%= f.text_field :slug, class: "app-form-control" %>
    </div>
  <% end %>

  <% if TierList.column_names.include?("description") %>
    <div class="app-form-group">
      <%= f.label :description, "Description", class: "app-form-label" %>
      <%= f.text_area :description,
                      rows: 4,
                      class: "app-form-control" %>
    </div>
  <% end %>

  <% if TierList.column_names.include?("is_published") %>
    <div class="app-form-group">
      <label class="app-form-label">Published</label>
      <label class="app-checkbox">
        <%= f.check_box :is_published %>
        <span>Visible on the site</span>
      </label>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit "Save", class: "app-button-primary" %>
    <%= link_to "Back",
                admin_tier_lists_path,
                class: "app-button-secondary" %>
  </div>
<% end %>