<div class="page-content auth-page">
  <div class="auth-card">
    <h1 class="auth-title">Edit About page</h1>
    <p class="auth-subtitle">
      Update the main description shown on the public About page.
    </p>

    <%= form_with model: @about_text,
                  url: admin_about_path,
                  local: true do |f| %>

      <div class="app-form-group">
        <%= f.label :title, "Page title", class: "app-form-label" %>
        <%= f.text_field :title, class: "app-form-control" %>
      </div>

      <div class="app-form-group">
        <%= f.label :body, "Body", class: "app-form-label" %>
        <%= f.text_area :body, rows: 10, class: "app-form-control" %>
      </div>

      <div class="form-actions">
        <%= link_to "Back to Dashboard", admin_root_path, class: "app-button-secondary" %>
        <%= f.submit "Save changes", class: "app-button-primary" %>
      </div>
    <% end %>
  </div>
</div>