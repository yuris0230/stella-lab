<div class="page-content">
  <header class="app-page-header">
    <h1 class="app-page-title"><%= @item.name %></h1>
    <p class="app-page-subtitle">
      Type: <strong><%= @item.item_type %></strong>
      <% if @item.rarity.present? %>
        &nbsp;|&nbsp; Rarity: <strong><%= @item.rarity %></strong>
      <% end %>
    </p>
  </header>

  <section class="home-section">
    <div class="app-section-card">
      <p>
        <strong>Published:</strong>
        <%= @item.is_published? ? "Yes" : "No" %>
      </p>
      <% if @item.summary.present? %>
        <hr />
        <p><%= simple_format(@item.summary) %></p>
      <% end %>
    </div>
  </section>

  <section class="home-section">
    <h2 class="home-section-title">Used by characters</h2>
    <div class="app-section-card">
      <% if @item.recommended_for_characters.any? %>
        <ul class="home-bullet-list">
          <% @item.recommended_for_characters.each do |ch| %>
            <li><%= link_to ch.name, admin_character_path(ch) %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted mb-0">
          No characters are using this item as recommended equipment yet.
        </p>
      <% end %>
    </div>
  </section>

  <section class="home-section">
    <%= link_to "Edit item", edit_admin_item_path(@item),
                class: "home-row home-row-link" %>
  </section>
</div>