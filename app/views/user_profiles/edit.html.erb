<div class="page-content auth-page">
  <div class="auth-card">
    <h1 class="auth-title">Edit profile</h1>
    <p class="auth-subtitle">
      Update your public display name and bio.
    </p>

    <%= form_with model: @profile, url: profile_path, local: true do |f| %>
      <div class="app-form-group">
        <%= f.label :display_name, "Display name", class: "app-form-label" %>
        <%= f.text_field :display_name,
                         class: "app-form-control",
                         placeholder: "Your display name" %>
      </div>

      <div class="app-form-group">
        <%= f.label :bio, "Bio", class: "app-form-label" %>
        <%= f.text_area :bio,
                        rows: 4,
                        class: "app-form-control",
                        placeholder: "Tell others a little bit about you" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Save changes", class: "app-button-primary" %>
        <%= link_to "Cancel", my_page_path, class: "app-button-secondary" %>
      </div>
    <% end %>
  </div>
</div>