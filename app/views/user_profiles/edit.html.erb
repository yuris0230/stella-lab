<div class="page-content">
  <div class="auth-page">
    <div class="auth-card">
      <h1 class="auth-title">Edit profile</h1>
      <p class="auth-subtitle">
        Update your public display name and bio.
      </p>

      <%= form_with model: @profile, url: profile_path, local: true do |f| %>
        <!-- Display name -->
        <div class="app-form-group">
          <%= f.label :display_name, "Display name", class: "app-form-label" %>
          <%= f.text_field :display_name, class: "auth-input" %>
        </div>

        <!-- Bio -->
        <div class="app-form-group">
          <%= f.label :bio, "Bio", class: "app-form-label" %>
          <%= f.text_area :bio, rows: 4, class: "auth-input auth-textarea" %>
        </div>

        <!-- Actions -->
        <div class="form-actions">
          <%= f.submit "Save changes", class: "app-button-secondary" %>
          <%= link_to "Cancel", my_page_path, class: "app-button-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>