<div class="page-content auth-page">
  <div class="auth-card">
    <h1 class="auth-title">Sign up</h1>
    <p class="auth-subtitle">
      Create an account to join discussions and manage your profile on Stella Lab.
    </p>

    <%= form_with model: resource,
                  as: resource_name,
                  url: registration_path(resource_name),
                  local: true do |f| %>

      <div class="app-form-group">
        <%= f.label :email, "Email", class: "app-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          class: "app-form-control" %>
      </div>

      <div class="app-form-group">
        <%= f.label :password, "Password", class: "app-form-label" %>
        <span class="app-form-hint">(6 characters minimum)</span>
        <%= f.password_field :password, autocomplete: "new-password",
                             class: "app-form-control" %>
      </div>

      <div class="app-form-group">
        <%= f.label :password_confirmation, "Password confirmation", class: "app-form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
                             class: "app-form-control" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign up", class: "app-button-primary" %>
        <%= link_to "Log in", new_user_session_path, class: "app-button-secondary" %>
      </div>
    <% end %>
  </div>
</div>