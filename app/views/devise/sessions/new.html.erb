<% page_title =
     resource_name == :admin ? "Admin Login" : "Log in" %>

<% page_subtitle =
     if resource_name == :admin
       "Sign in to the Stella Lab admin dashboard."
     else
       "Log in to manage your profile and join the conversation."
     end %>

<div class="page-content auth-page">
  <div class="auth-card">
    <h1 class="auth-title"><%= page_title %></h1>
    <p class="auth-subtitle">
      <%= page_subtitle %>
    </p>

    <%= form_with model: resource,
                  as: resource_name,
                  url: session_path(resource_name),
                  local: true do |f| %>

      <div class="app-form-group">
        <%= f.label :email, "Email", class: "app-form-label" %>
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: "app-form-control" %>
      </div>

      <div class="app-form-group">
        <%= f.label :password, "Password", class: "app-form-label" %>
        <%= f.password_field :password,
                             autocomplete: "current-password",
                             class: "app-form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="app-form-group app-form-inline">
          <label class="app-checkbox">
            <%= f.check_box :remember_me %>
            <span>Remember me</span>
          </label>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit page_title, class: "app-button-primary" %>

        <%# Show "Sign up" only for normal users (not admins) %>
        <% if devise_mapping.registerable? && resource_name == :user %>
          <%= link_to "Sign up",
                      new_registration_path(resource_name),
                      class: "app-button-secondary" %>
        <% end %>
      </div>

      <%# Forgot password (if recoverable) %>
      <% if devise_mapping.recoverable? %>
        <div class="auth-links">
          <%= link_to "Forgot your password?",
                      new_password_path(resource_name),
                      class: "app-button-secondary" %>
        </div>
      <% end %>

    <% end %>
  </div>
</div>