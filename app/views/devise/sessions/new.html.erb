<div class="page-content auth-page">
  <div class="auth-card">
    <h1 class="auth-title">Log in</h1>
    <p class="auth-subtitle">
      Log in to manage your profile and join the conversation.
    </p>

    <%= form_with scope: :user, url: user_session_path, local: true do |f| %>
      <div class="app-form-group">
        <%= f.label :email, "Email", class: "app-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          class: "app-form-control" %>
      </div>

      <div class="app-form-group">
        <%= f.label :password, "Password", class: "app-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password",
                             class: "app-form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="app-form-group app-form-inline">
          <label class="app-checkbox">
            <%= f.check_box :remember_me %>
            <span>Remember me</span>
          </label>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit "Log in", class: "app-button-primary" %>
        <%= link_to "Sign up", new_user_registration_path, class: "app-button-secondary" %>
      </div>

      <div class="auth-links">
        <%= link_to "Forgot your password?", new_user_password_path, class: "app-button-secondary" %>
      </div>
    <% end %>
  </div>
</div>