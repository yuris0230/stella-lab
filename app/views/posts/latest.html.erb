<div class="page-content">
  <header class="app-page-header">
    <h1 class="app-page-title">Latest posts</h1>
    <p class="app-page-subtitle">
      Recent replies across all topics.
    </p>
  </header>

  <% if @posts.any? %>
    <section class="home-section">
      <ul class="simple-list">
        <% @posts.each do |post| %>
          <% author = post.user %>
          <li class="simple-list-item">
            <div>
              <%= link_to post.topic.title,
                          topic_path(post.topic, anchor: "post-#{post.id}"),
                          class: "simple-list-link" %>
              <div class="simple-list-meta">
                <%= author&.user_profile&.display_name || author&.name || "Unknown user" %>
                &nbsp;Â·&nbsp;
                <%= l(post.created_at, format: :short) rescue post.created_at %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </section>
  <% else %>
    <p class="page-muted">
      There are no posts yet.
    </p>
  <% end %>
</div>