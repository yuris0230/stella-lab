<div class="page-content">
  <header class="app-page-header">
    <h1 class="app-page-title">
      New topic for
      <%= @topicable.respond_to?(:name) ? @topicable.name : @topicable.try(:title) %>
    </h1>
    <p class="app-page-subtitle">
      Start a discussion related to this <%= @topicable.class.name.downcase %>.
    </p>
  </header>

  <section class="home-section">
    <div class="app-section-card">
      <%= form_with(model: [@topicable, @topic], local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :title, "Title", class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :first_post_body, "First post", class: "form-label" %>
          <%= f.text_area :first_post_body,
                          rows: 6,
                          class: "form-control" %>
        </div>

        <div>
          <%= f.submit "Create topic", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </section>
</div>